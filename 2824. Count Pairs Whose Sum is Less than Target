class Solution {
public:
    int countPairs(vector<int>& nums, int target) {
        sort(nums.begin(), nums.end());
        int n = nums.size();
        int count = 0;

        for (int i = 0; i < n; i++) {
            int low = i + 1, high = n - 1, pos = i;
            while (low <= high) {
                int mid = (low + high) / 2;
                if (nums[i] + nums[mid] < target) {
                    pos = mid;       // valid j
                    low = mid + 1;   // try to go right
                } else {
                    high = mid - 1;  // go left
                }
            }
            count += (pos - i);
        }

        return count;
    }
};
